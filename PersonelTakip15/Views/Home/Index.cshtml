
@model PersonelTakip1.Model.LoginViewModel

@{
    <style>

        body {
            background-color: #ad6565;
        }

        .font-style {
            text-align: center;
            color: black;
        }

        #frame {
            width: 320px;
            height: 350px;
            background-color: #f7bebe;
            margin: auto;
        }

        #font {
            font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
            font-weight: 400;
            color: black;
            font-weight: bold;
        }

        .uzaklik {
            padding-top: 45px;
            font-weight: 600;
            font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
        }

        #button {
            background-color: #ad6565;
            color: black;
        }
    </style>


    ViewBag.Title = "Login";

    Layout = "~/Views/Shared/_Layout.cshtml";

    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

}




<div align="center" id="frame">
    @*//Hizalama işlemi yapar*@

    <h2  class="uzaklik">Giriş Yap </h2>


    @using (Html.BeginForm("Login", "Home", FormMethod.Post))

    {


        @Html.AntiForgeryToken()//Bir koruma metodudur.Web form yapılarına gelen istekler bizim serverımızdan mı yoksa karşı sitelerden mi geliyor bunu anlarız.


        @Html.ValidationSummary(true)//Hata özeti gösterir.

        if (@ViewBag.Message != null)

        {

            <div style="border: 1px solid red">

                @ViewBag.Message

            </div>

        }


        <div class="form-horizontal">

            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group" align="center">

                <h5 align="center"id="font">Kullanıcı Adı</h5>



                <div class="col-md-20">


                    @Html.EditorFor(a => a.UserName)




                </div>

            </div>



            <div class="form-group">

                <h5>Şifre</h5>

                <div class="col-md-20" name="SoyAd">

                    @*@Html.EditorFor(a => a.Sifre, new {})

                    @Html.ValidationMessageFor(a => a.Sifre)*@
                    <input type="password" id="font" name="Sifre" />

                </div>

            </div>




            <div class="form-group">

                <div class="col-md-20">

                    <button type="submit"id="button"><i class="fa fa-sign-in fa-fw"></i>Giriş Yap</button>

                </div>

            </div>

        </div>

    }

</div>
